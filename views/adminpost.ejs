<body>
    <div id="header">
        <div class="header">
            <ul>
                <li>
                    <a href="/">home</a>
                </li>
                <li>
                    <a href="/about">about</a>
                </li>
                <li>
                    <a href="/blog">blog</a>
                </li>
                <li>
                    <a href="/shows">shows</a>
                </li>
                <li class="selected">
                    <a href="/users/logout">Logout</a>
                </li>
                <li>
                    <a href="/setting">Settings</a>
                </li>
                <li class="selected">
                    <a href="/users/adminpost">Post your Blog</a>
                </li>
            </ul>

        </div>
    </div>
    <div class="bg-image"></div>
    <!-- <div class="container-login100"> -->
    <div class="bg-text">
        <div style="margin:0% 24%;">
            <%-include("./partials/messages")-%>
            <h1 style="color:#f2427f;text-align: left;padding-bottom: 20px;">Post Your Valuable Blog Here</h1>
            <form action="/users/adminpost" method="post">
                <div class="form-row">
                    <input type="text" id="blogTitle" name="blogTitle" class="form-control" placeholder="Blog Title"
                        value="<%= typeof blogTitle != 'undefined' ? blogTitle : '' %>" />
                </div>
                <div class="form-row">
                    <textarea name="blog" id="blog" cols="30" class="form-control" rows="10"
                        placeholder="Write Your Blog Here"
                        value="<%= typeof blog != 'undefined' ? blog : '' %>"></textarea>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-outline-primary"
                        style="padding-left: 60px;padding-right: 60px;"> Post </button>
                    <a href="/dashboard" class="btn btn-outline-primary">Go Back To Your Account</a>
                </div>
            </form>
        </div>
    </div>
    </div>

